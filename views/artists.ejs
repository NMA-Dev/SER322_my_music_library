<html>
    <head>
        <title>Artists</title>

        <link rel="stylesheet" type="text/css" href="/views/styles/home.css">
        <link rel="stylesheet"  href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script type="text/javascript">
            toHome = () => {                
                window.location.href = "/home";
            }

            toAlbums = () => {
                window.location.href = "/albums";
            }

            toSongs = () => {
                window.location.href = "/songs";
            }
        </script>
    </head>
    <body style="background-color: gray">
        <div style="padding: 10px 10px 10px 10px; background-color: gray">
            <h2 style="color:white;">Artists!<h2>
            <div>
                <button onclick="toHome()" class="btn btn-primary">Home</button>
                <button onclick="toAlbums()" class="btn btn-primary">Albums</button>
                <button onclick="toSongs()" class="btn btn-primary">Songs</button>
            </div>
            <hr>
            
            <table class="table table-hover table-dark" border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th scope="col" width="50px">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Formation date</th>
                    <th scope="col">Manager</th>
                    <th scope="col">Band members</th>
                </tr>
                <% if(data.length > 0){ 
                        for(var i = 0;i < data.length;i++) { %>
                    <tr>
                        <td><%=(i+1)%></td>
                        <td><%=data[i].name%></td>
                        <td><%=data[i].formation_date%></td>
                        <td><%=data[i].manager%></td>
                        <td><%=data[i].no_members%></td>
                    </tr>
                <% }
                
                }else{ %>
                        <tr>
                        <td colspan="3">No Artists</td>
                        </tr>
                <% } %>
            </table>
        </div>
    </body>
</html>